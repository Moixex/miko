{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "types": ["node"],               // ðŸ‘ˆ Necesario para reconocer __dirname, process, etc.
    "lib": ["ES2022"],               // ðŸ‘ˆ Opcional pero mejora compatibilidad
    "strict": true,
    "noImplicitAny": true,
    "declaration": false,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "esModuleInterop": true,
    "paths": {
      "@core*": ["core/"],
      "@utils*": ["utils/"],
      "@utils/*": ["utils/*"],
      "@handlers*": ["handlers/"],
      "@locales*": ["locales/"],
      "@root": ["."],
      "@structures/*": ["structures/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
